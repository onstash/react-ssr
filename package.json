{
  "name": "react-ssr",
  "version": "1.0.0",
  "description": "React server side rendering using nodeJS",
  "main": "index.js",
  "repository": "https://github.com/onstash/react-ssr",
  "author": "Santosh Venkatraman <santosh.venk@gmail.com>",
  "license": "GPL",
  "dependencies": {
    "cors": "^2.8.4",
    "express": "^4.16.2",
    "fastify": "^0.37.0",
    "isomorphic-fetch": "^2.2.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-dom-server": "^0.0.5",
    "react-loadable": "^5.3.1",
    "react-router-dom": "^4.2.2"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-import-to-require": "^1.0.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "clean-webpack-plugin": "^0.1.17",
    "extract-text-webpack-plugin": "^3.0.2",
    "nodemon": "^1.14.3",
    "parallelshell": "^3.0.2",
    "react-hot-loader": "^3.1.3",
    "rollup": "^0.53.0",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-json": "^2.3.0",
    "rollup-plugin-uglify": "^2.0.1",
    "uglifyjs-webpack-plugin": "^1.1.4",
    "webpack": "^3.10.0"
  },
  "scripts": {
    "//": "This will generate a rollupjs based server bundle",
    "build": "NODE_ENV=production ./node_modules/.bin/rollup -c",
    "//": "This will generate a webpack pased client bundles",
    "build:client": "NODE_ENV=production webpack --config ./webpack.config.js/",
    "//": "This will generate client bundle first and then server bundle",
    "build:prod": "yarn build:client && yarn build",
    "//": "This will run 'npm run build:prod' or 'yarn build:prod' and start the server",
    "start": "yarn build:prod && node ./build/server.min.js"
  }
}
